<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KullaniciBilgileriniGuncelleme">

    <EditText
        android:id="@+id/adttxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="ADINIZ"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/soyadtxt4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/soyadtxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="SOYADINIZ"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/telefontxt4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adttxt4"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/telefontxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="TELEFON NUMARINIZ"
        android:inputType="phone"
        android:maxLength="11"
        app:layout_constraintBottom_toTopOf="@+id/emailtxt4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soyadtxt4"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/emailtxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:hint="EMAİL ADRESİNİZ"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/button13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefontxt4"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/button13"
        android:layout_width="135dp"
        android:layout_height="0dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="238dp"
        android:onClick="KullaniciGuncellebtn"
        android:text="GÜNCELLE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>