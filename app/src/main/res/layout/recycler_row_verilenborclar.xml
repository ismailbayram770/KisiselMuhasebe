<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:background="#F3B9B4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recycler_row_verilenborcmiktartxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="miktar"
        android:textColor="@color/black"
        android:textSize="20sp"></TextView>

    <TextView
        android:id="@+id/recycler_row_borcverilentarihtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="verilen tarih"
        android:textColor="@color/black"
        android:textSize="20sp"></TextView>

    <TextView
        android:id="@+id/recycler_row_borcalınacaktarihtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="alınacak tarih"
        android:textColor="@color/black"
        android:textSize="20sp"></TextView>

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="VerilenBorcSilme"
        android:text="Borç Alındı"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/verilenborcidtxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="id" />

</LinearLayout>